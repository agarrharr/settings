[include]
    path = ~/.gitconfig.local
[core]
    editor = nvim
    excludesfile = ~/.gitignore
    autocrlf = input
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[web]
    browser = google-chrome
[rerere]
    enabled = 1
    autoupdate = 1
[branch]
    autosetuprebase = always
[color]
    ui = true
[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
[merge]
    tool = vimdiff
    conflictstyle = diff3
[diff]
    tool = vimdiff
[push]
    default = simple
